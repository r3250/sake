<div class="container">
	   <div class="row admin_post_form">
		   	 <div class="col-lg-3">
		   	 </div>
		   	   <div class="col-lg-6">
				 <%= form_for(@sake_post, :url => { :contoroller => 'admins/sake_posts', :action => 'update'}) do |f| %>
		            <div class="row">
		              	 <div class="col-lg-3 col-md-3 col-3 image_filed text_color">
							<%= f.attachment_field :image %>
					    </div>
						<div class="col-lg-4 col-md-3">
						</div>
						<div class="col-lg-5 col-md-6 col-9">
								<%= f.text_field :sake_name, :size => "30", :placeholder => "sake名" %><br>
							 <div class="field_form">
								<%= f.text_field :shop_name, :size => "30",  :placeholder => "店名" %><br>
							</div>
							<div class="field_form">
								<%= f.text_field :address, :size => "30",  :placeholder => "住所" %><br>
							</div>
								<%= f.text_area :caption, :size => "30",  :placeholder => "sake紹介" %><br>
							<div class="sake_post_btn">
								<%= f.submit "登録", class: "btn btn-secondary btn-sm" %>
						    </div>
						</div>
				     </div>
				 <% end %>
		       </div>
		      <div class="col-lg-3">
		      </div>
	  </div>
		  <div class="admin_btn_back">
			<%= link_to "戻る", admins_user_path(@sake_post.user_id) %>
		  </div>
</div>