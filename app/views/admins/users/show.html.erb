<div class="container">
  <div class="row">
		<!-- タブ・メニュー -->
		<ul class="nav nav-tabs">
			<li class="active"><a href="#sampleContentA" data-toggle="tab">ユーザーs</a></li>
			<li><a href="#sampleContentB" data-toggle="tab">タブＢ</a></li>
		</ul>

<!-- タブ内容 -->
		      <div class="tab-content">
					<div class="tab-pane active" id="sampleContentA">
						   <div class="row">
				    			  <div class="col-lg-3">
				    				 <div class="user_image">
									  <%= attachment_image_tag @user, :image, :fill, 200, 300, format: 'jpg' %>
									  <div class= "user_image_text">
									  <%= link_to "投稿一覧", user_post_path(@user) %>
									  </div>
									</div>
								  </div>
								  <div class="col-lg-1">
								  </div>
									<div class="col-lg-8 user_text">
									  <p><%= "ユーザー名" %> <span class="user_nickname">: <%= @user.nickname %></span></p>
									  <p><%= "好きな酒" %> <span class="user_favolite_sake">: <%= @user.favorite_sake %></span></p>
									  <p><%= "好きな飲み方" %> <span class="user_favolite_shop">: <%= @user.favorite_drink %></span></p>
									  <p><%= "お気に入り場所" %> <span class="user_favolite_address">: <%= @user.favorite_shop %></span></p>
									  <p><%= "自己紹介" %></p>
									  	<p><span class="user_introduction"><%= @user.introduction %></span></p>
									 <div class="user_mybtn">
									 <% if user_signed_in? %>
									  <% if @user.id == current_user.id %>
									  <%= link_to "投稿", new_sake_post_path %>
									  <%= link_to "編集", edit_user_path(current_user) %>
									  <% end %>
									 <% end %>
									  <%= link_to "戻る", sake_posts_path %>
				                    </div>
								  </div>
					   		</div>
					</div>
					<div class="tab-pane" id="sampleContentB">
						<div class="row">
		                	<div class="col-lg-2">
		                	</div>
		                	<div class="col-lg-10">
		                    	<% @user_posts.each do |user_post| %>
		                        <%= 5.times do %>
		                        	 <%= link_to sake_post_path(user_post) do %>
		                        	 <%= attachment_image_tag user_post, :image, :fill, 200, 300, format: 'jpg' %>
		                    	  <% end %>
		                        <% end %>
		                    	<% end %>
		                	</div>
				        </div>
				    </div>
			  </div>
  </div>
</div>