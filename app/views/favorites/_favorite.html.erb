<div class="sake_post_box_favorite">
    <% if user_signed_in? %>
	  <% if sake_post.favorited_by?(current_user) %>
		  <%= link_to sake_post_favorites_path(sake_post), method: :delete, remote: true do %>
		     <i class="glyphicon glyphicon-glass iine" aria-hidden="true"><%= sake_post.favorites.count %></i>
	      <% end %>
	  <% else %>
		   <%= link_to sake_post_favorites_path(sake_post), method: :post, remote: true do %>
		     <i class="glyphicon glyphicon-glass" aria-hidden="true"><%= sake_post.favorites.count %></i>
		   <% end %>
	 <% end %>
	<% else %>
	 <%= link_to new_user_registration_path do %>
	   <i class="glyphicon glyphicon-glass " aria-hidden="true"><%= sake_post.favorites.count %></i>
	 <% end %>
   <% end %>
</div>