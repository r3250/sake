<!DOCTYPE html>
<html>
  <head>
    <title>Sake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<header>
  	  <div class="container">
  		<nav>
  			<ul class="nav_list">
         <div class="row">
          <% if user_signed_in? %>
              <li class="nav_list_item"><%= link_to "Sign out",destroy_user_session_path, method: :delete %></li>
              <li class="nav_list_item"><%= link_to "menu", "" %></li>
              <% else %>
      				<li class="nav_list_item"><%= link_to "新規登録",new_user_registration_path %></li>
      				<li class="nav_list_item"><%= link_to "ログイン",new_user_session_path %></li>
      				<li class="nav_list_item"><%= link_to "menu", "" %></li>
          <% end %>
  			</ul>
  		</nav>
  	   </div>
     </div>
  	</header>

    <%= yield %>

    <footer>
    	Copyright © 2018 SAKE. All Rights Reserved.
    </footer>
  </body>
</html>
