<!DOCTYPE html>
<html>
  <head>
    <title>Sake</title>
   <%= csrf_meta_tags %>
     <meta name="viewport" content="width=device-width,initial-scale=1.0">
     <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<% if request.path.include?('admin') %>
  <body class="admin_background">
    <% else %>
  <body class="<%= "#{controller.controller_name}" %> ">
<% end %>
  <% if request.path.include?('admin') %>
    <header class="admin_header">
  <% else %>
  	<header class="header_<%= "#{controller.controller_name}" %>">
  <% end %>
       <% if request.path.include?('admin') %>
         <%= render 'layouts/adminHeader' %>
       <% else %>
         <%= render 'layouts/userHeader' %>
       <% end %>
  	</header>

    <%= yield %>

  <% if request.path.include?('admin') %>
    <footer class="admin_<%="#{controller.controller_name}" %>">
      <div class="container footer_under_border">
        Copyright © 2018 SAKE. All Rights Reserved.
  <% else %>
    <footer class="footer_<%="#{controller.controller_name}" %>">
      <div class="container footer_under_border">
    	  Copyright © 2018 SAKE. All Rights Reserved.
  <% end %>
      </div>
    </footer>
  </body>
</html>
