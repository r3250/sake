<a class="btn btn-dark" data-toggle="collapse" href="#collapseExample">
  <span class="sake_post_favorite_text"> コメント<%= sake_comments.count%> 件 表示</span>
</a>
	<div class="collapse" id="collapseExample">
	 <div class="row comment_area">
	  <div class="well">
			<% sake_comments.each do |sake_comment| %>
			  <% unless sake_comment.id.nil? %>
			    <p><%= link_to "#{sake_comment.user.nickname}", sake_post_path(sake_comment.user.id) %></p>
			    <p>コメント：<%= sake_comment.comment %></p>
			    <% if sake_comment.user == current_user %>
			      <p><%= link_to '削除する', sake_post_sake_comment_path(sake_comment.sake_post_id, sake_comment.id), method: :delete, remote: true %></p>
			    <% end %>
			  <% end %>
			<% end %>
	  </div>
     </div>
    </div>