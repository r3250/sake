<div class="container">
	   <div class="row post_form">
		   	 <div class="col-lg-3">
		   	 </div>
		   	   <div class="col-lg-6">
		   	 <% if @sake_post.errors.any? %>
			    <div id="error_explanation">
			      <ul>
				      <% @sake_post.errors.full_messages.each do |message| %>
				        <li><%= message %></li>
			          <% end %>
		          </ul>
		        </div>
	          <% end %>
				 <%= form_for(@sake_post) do |f| %>
		            <div class="row">
		              	 <div class="col-lg-3 image_filed">
							<%= f.attachment_field :image %>
					    </div>
						<div class="col-lg-4">
						</div>
						<div class="col-lg-5">
								<%= f.text_field :sake_name, :size => "30", :placeholder => "sake名" %><br>
							 <div class="field_form">
							 	<p><strong class="color">※</strong> 複数入力 半角『 <strong class="color">,</strong> 』で入力</p>
								<%= f.text_field :tag_list, :size => "30",  :placeholder => "タグ", :value => @tag_list %><br>
							</div>
								<%= f.text_field :shop_name, :size => "30",  :placeholder => "店名" %><br>
							<div class="field_form">
								<%= f.text_field :address, :size => "30",  :placeholder => "住所" %><br>
							</div>
								<%= f.text_area :caption, :size => "30",  :placeholder => "sake紹介" %><br>
							<div class="sake_post_btn">
								<%= f.submit "登録", class: "btn btn-default" %>
						    </div>
						</div>
				     </div>
				 <% end %>
		       </div>
		      <div class="col-lg-3">
		      </div>
	  </div>
		  <div class="btn_back">
			<%= link_to "戻る", sake_post_path(@sake_post) %>
		  </div>
</div>