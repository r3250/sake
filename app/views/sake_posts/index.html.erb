<div class="container">
 <div class="sake_post_box">
   <div class="row">
 	<div class="col-lg-2">
    </div>
    <div class="col-lg-10">
	   <% @search_sake_posts.each do |sake_post| %>
	   			<div class="row">
	   			 <div class="col-lg-1">
	   			 </div>
    			  <div class="col-lg-3">
    			   <div class="sake_post_image">
    				  <%= link_to sake_post_path(sake_post) do %>
					    <%= attachment_image_tag sake_post, :image, :fill, 200, 300, format: 'jpg' %>
					  <% end %>
					<div class="sake_post_box_favorite">
					    <% if user_signed_in? %>
						  <% if sake_post.favorited_by?(current_user) %>
							  <%= link_to sake_post_favorites_path(sake_post), method: :delete do %>
							     <i class="glyphicon glyphicon-glass" aria-hidden="true"><%= sake_post.favorites.count %></i>
						      <% end %>
						  <% else %>
							   <%= link_to sake_post_favorites_path(sake_post), method: :post do %>
							     <i class="glyphicon glyphicon-glass" aria-hidden="true"><%= sake_post.favorites.count %></i>
							   <% end %>
						 <% end %>
						<% else %>
						 <%= link_to new_user_registration_path do %>
						   <i class="glyphicon glyphicon-glass" aria-hidden="true"><%= sake_post.favorites.count %></i>
						 <% end %>
					   <% end %>
					</div>
				   </div>
				  </div>
				  <div class="col-lg-1">
				  </div>
					<div class="col-lg-7 sake_post_text">
	    				 	<%= link_to user_path(sake_post.user_id) do %>
						     <p><%= "ユーザー名" %><span class="sake_post_nickname"> ：<%= sake_post.user.nickname %></span></p>
						    <% end %>
						     <p><%= "sake名" %><span class="sake_post_sake"> ：<%= sake_post.sake_name %></span></p>
						     <p><%= "店名" %><span class="sake_post_shop"> ：<%= sake_post.shop_name %></span></p>
							 <% if user_signed_in? %>
						 	  <%= render partial: 'sake_comments/form', locals: { sake_comment: @sake_comment, sake_post: sake_post } %>
					     <div class="sake_post_text_comment">
					 	　　　<%= link_to "コメント表示", sake_post_path(sake_post) %>
					     </div>
					         <% end %>
					         <div class='field'>
								<%= form_for(sake_post) do |f| %>
								    <%= f.label :tag_list, 'Tags (separated by commas)' %><br/>
								    <%= f.text_field :tag_list %>
								    <%= f.submit "登録" %>
								<% end %>
							 </div>

							<span class="label label-danger"><% sake_post.tag_list.split(",").to_a.each do |tag| %></span>
							<span class="label label-danger"><%=link_to tag, sake_posts_path(tag_list: tag) %></span>
							<% end %>
					</div>
	   			</div>
		<% end %>
    </div>
    <div class="paginate">
    <%= paginate @search_sake_posts %>
    </div>
  </div>
 </div>
</div>
